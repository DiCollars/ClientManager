@{
    ViewData["Title"] = "Update score";
}
    <form>
        <div class="form-group">
            <input type="text" class="form-control" placeholder="Enter Sum" name="Sum">
        </div>
        <div class="form-group">
            <input type="hidden" class="form-control" name="AccountId" value="@ViewBag.Id">
        </div>
        <div class="form-group">
            <input type="hidden" class="form-control" name="userId" value="@ViewBag.userId">
        </div>
        <div class="form-check">
            <input class="form-check-input" type="radio" name="Operation" value="@ClientManagerMVC.JsonModels.OperationJson.Decrease">
            <label class="form-check-label">-</label>
        </div>
        <div class="form-check">
            <input class="form-check-input" type="radio" name="Operation" value="@ClientManagerMVC.JsonModels.OperationJson.Increase">
            <label class="form-check-label">+</label>
        </div>
        <button type="submit" class="btn btn-dark">Submit</button>
    </form>